<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/background_gradient11">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/daystocomplete"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="5dp"
                android:background="@drawable/background_shape_blue_translucent"
                android:padding="5dp"
                android:textSize="@dimen/font_text" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/daystocomplete"
                android:layout_centerHorizontal="true"
                android:background="@drawable/background_shape_blue_translucent"
                android:padding="5dp"
                android:layout_margin="5dp">

                <RadioGroup
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioGroup"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="30dp"
                    android:layout_below="@+id/daystocomplete"
                    android:layout_alignParentStart="false"
                    android:layout_alignParentEnd="false">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option 1"
                        android:tag="1"
                        android:id="@+id/radioButton1"
                        android:layout_below="@+id/daystocomplete"
                        android:layout_centerHorizontal="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option 2"
                        android:tag="2"
                        android:id="@+id/radioButton2" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option 3"
                        android:tag="3"
                        android:id="@+id/radioButton3" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="option 4"
                        android:tag="4"
                        android:id="@+id/radioButton4" />
                </RadioGroup>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout2"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout1"
                android:gravity="center"
                android:background="@drawable/background_shape_blue_translucent"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:weightSum="7">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:id="@+id/root1">

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:src="@drawable/ic_action_tick"
                        android:id="@+id/correct_button"
                        app:cb_color="@color/holo_green_light"
                        app:cb_pressedRingWidth="8dip" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/correct"
                        android:textColor="@color/button_green"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/submit"
                    android:id="@+id/button"
                    android:layout_gravity="center"
                    android:background="@drawable/button_green"
                    android:padding="20dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:id="@+id/root2">

                    <at.markushi.ui.CircleButton
                        android:layout_width="64dip"
                        android:layout_height="64dip"
                        android:src="@drawable/ic_action_cross"
                        android:id="@+id/wrong_button"
                        app:cb_color="@color/button_red"
                        app:cb_pressedRingWidth="8dip"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/wrong"
                        android:textColor="@color/button_red"
                        android:textAlignment="center"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>